{
    "compilerOptions": {
        "target": "es2016",
        "module": "ES2022",
        "rootDir": "./src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "jsx": "react-jsx",
        "types": ["node", "jest", "@testing-library/jest-dom"]
    }
}
